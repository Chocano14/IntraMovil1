<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_light"
    android:weightSum="1"
    android:orientation="vertical"
    >


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <RelativeLayout

        android:layout_width="match_parent"
        android:visibility="visible"
        android:id="@+id/bgrSede"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Bienvenido"
            android:id="@+id/textView"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold|italic"
            android:textSize="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnHorario"
            android:layout_gravity="right|top"
            android:layout_marginTop="38dp"
            android:layout_below="@+id/BtnNotas"
            android:layout_alignLeft="@+id/BtnNotas"
            android:layout_alignStart="@+id/BtnNotas"
            android:background="@drawable/orario12" />
        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnBusquet"
            android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/BtnHorario"
            android:layout_alignStart="@+id/BtnHorario"
            android:layout_marginTop="600dp"
            android:background="@drawable/bsqueda2"
            />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnResAc"
            android:layout_gravity="left|bottom"
            android:layout_below="@+id/BtnHorario"
            android:layout_alignLeft="@+id/BtnHorario"
            android:layout_alignStart="@+id/BtnHorario"
            android:layout_marginTop="40dp"
            android:background="@drawable/acad2" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnPag"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignTop="@+id/BtnHorario"
            android:layout_alignLeft="@+id/BtnAsistencia"
            android:layout_alignStart="@+id/BtnAsistencia"
            android:background="@drawable/pgosd2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Notas"
            android:id="@+id/txtNota"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Asistencia"
            android:id="@+id/txtAsist"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginTop="225dp"
            android:layout_marginLeft="225dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Horario"
            android:id="@+id/txtHora"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="385dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Pagos"
            android:id="@+id/txtPago"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="385dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Resumen \nAcademico"
            android:id="@+id/txtResAca"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="535dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar \n  Sala"
            android:id="@+id/txtBuscSal"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="700dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtUser"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnAlam"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="55dp"
            android:background="@drawable/larmak2"
            android:layout_alignTop="@+id/BtnResAc"
            android:layout_alignStart="@+id/BtnPag" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnMateriales"
            android:layout_gravity="right|bottom"
            android:layout_marginTop="13dp"
            android:background="@drawable/material"
            android:layout_alignTop="@+id/BtnBusquet"
            android:layout_alignStart="@+id/txtPago" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnNotas"
            android:layout_gravity="top|left"
            android:layout_marginTop="18dp"
            android:background="@drawable/notas2"
            android:layout_below="@+id/txtUser"
            android:layout_alignStart="@+id/txtBuscSal" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:id="@+id/BtnAsistencia"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/asistencia12"
            android:layout_alignTop="@+id/BtnNotas"
            android:layout_alignStart="@+id/txtPago" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      Mis \nMateriales"
            android:id="@+id/txtMate"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginLeft="145dp"
            android:layout_below="@+id/BtnMateriales"
            android:layout_alignEnd="@+id/txtAlarm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarmas"
            android:id="@+id/txtAlarm"
            android:textSize="25dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:layout_marginLeft="260dp"
            android:layout_below="@+id/BtnAlam"
            android:layout_alignEnd="@+id/BtnMateriales" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Desconectarse"
            android:id="@+id/btnSalir"
            android:background="@android:color/holo_orange_dark"
            android:textColor="#ffffff"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="27dp"
            android:onClick="ingresar"
            android:nestedScrollingEnabled="true"
            android:layout_below="@+id/txtMate"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
